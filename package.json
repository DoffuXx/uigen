{
  "name": "@doffu/uigen",
  "version": "1.0.1",
  "description": "Modern UI component generator CLI",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "uigen": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "dev": "tsx src/index.ts",
    "clean": "rm -rf ./lib/",
    "refresh": "node scripts/refresh-link.js",
    "link": "npm link",
    "check-link": "node scripts/check-link.js",
    "unlink": "npm unlink",
    "update-link": "npm run refresh",
    "refresh-dev": "npm run refresh && npm run dev",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0",
    "prepare": "husky install",
    "semantic-release": "semantic-release",
    "test:watch": "jest --watch",
    "test": "jest --coverage",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/doffuxx/uigen.git"
  },
  "license": "MIT",
  "author": {
    "name": "Ali Touil",
    "email": "touilalistudent@gmail.com",
    "url": "https://github.com/DoffuXx"
  },
  "engines": {
    "node": ">=12.0"
  },
  "keywords": [
    "cli",
    "ui",
    "components",
    "generator",
    "react",
    "typescript"
  ],
  "bugs": {
    "url": "https://github.com/doffuxx/uigen/issues"
  },
  "homepage": "https://github.com/DoffuXx/uigen#readme",
  "devDependencies": {
    "@ryansonshine/commitizen": "^4.2.8",
    "@ryansonshine/cz-conventional-changelog": "^3.3.4",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.8.1",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "semantic-release": "^24.2.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@ryansonshine/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --cache-location .eslintcache --fix"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "build",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "build",
                "section": "Dependencies and Other Build Updates",
                "hidden": false
              }
            ]
          }
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^12.1.0",
    "fs-extra": "^11.2.0",
    "inquirer": "^12.0.1",
    "node-fetch": "^3.3.2",
    "ora": "^8.1.1",
    "path": "^0.12.7",
    "rimraf": "^6.0.1",
    "sharp": "^0.33.5",
    "term-img": "^7.0.0",
    "terminal-image": "^3.0.0",
    "tsup": "^8.3.5",
    "zod": "^3.23.8"
  }
}
